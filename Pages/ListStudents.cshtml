@page
@model StudentGrades.Pages.ListStudentsModel

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Grades</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
<div class="row mb-3 text-center">
    <h2>Grades:</h2>
</div>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Subject</th>
        <th>Grade</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Students)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Subject</td>
            <td>@p.Grade</td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>