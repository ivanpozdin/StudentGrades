@page
@model StudentGrades.Pages.GradeModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <title>New Grade</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
<div class="row mb-3 text-center">
    <h4 class="col-sm-6">Add grade</h4>
</div>
<form asp-action="NewGrade" method="post">
    <div class="row mb-3">
        <span asp-validation-for="Student.Name" class="text-danger"></span>
        <label class="col-sm-1 col-form-label col-form-label-lg"
               asp-for="Student.Name">
            Name:
        </label>
        <div class="col-sm-4">
            <input class="form-control form-control-lg"
                   asp-for="Student.Name"/>
        </div>
    </div>
    <div class="row mb-3">
        <span asp-validation-for="Student.Subject" class="text-danger"></span>
        <label class="col-sm-1 col-form-label col-form-label-lg"
               asp-for="Student.Subject">
            Subject:
        </label>
        <div class="col-sm-4">
            <input class="form-control form-control-lg"
                   asp-for="Student.Subject"/>
        </div>
    </div>
    <div class="row mb-3">
        <span asp-validation-for="Student.Grade" class="text-danger"></span>
        <label class="col-sm-1 col-form-label col-form-label-lg"
               asp-for="Student.Grade">
            Grade:
        </label>
        <div class="col-sm-4">
            <input class="form-control form-control-lg"
                   asp-for="Student.Grade"/>
        </div>
    </div>
    <div class="row mb-3 mx-auto">
        <div class="col-sm-5 d-grip gap-2">
            <button class="btn btn-primary btn-lg" type="submit">Add!</button>
        </div>
    </div>

</form>
</body>
</html>